<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TableLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TableRow>
            <TextView android:text="thy word"
                      android:id="@+id/word_to_guess"
                      android:textSize="25dp"/>
        </TableRow>
        <TableRow>
            <TextView android:text="timer?" android:id="@+id/game_timer"/>
        </TableRow>
        <TableRow>
            <Button android:text="Guessed" android:id="@+id/guess_btn"/>
        </TableRow>
        <TableRow>
            <Button android:text="Rules violation" android:id="@+id/cancel_btn"/>
        </TableRow>
    </TableLayout>
    <TextView android:text="scores"
              android:id="@+id/in_game_scores"
              android:layout_width="match_parent"
              android:layout_height="match_parent"/>
</LinearLayout>