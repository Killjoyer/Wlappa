<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/choose_game_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:showDividers="middle"
            android:divider="@drawable/empty_tall_divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView 
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Choose game"
                    android:textSize="24dp"
            />
            <RadioGroup android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/game_choosing_group"
                        android:checkedButton="@id/game_choice_hat">
                <RadioButton android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="The Hat"
                             android:id="@+id/game_choice_hat"/>
                <RadioButton android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Wololo"
                             android:id="@+id/wololo"/>
                <RadioButton android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Wololo"
                             android:id="@+id/wololo2"/>
            </RadioGroup>
            <Button android:text="Next" 
                    android:id="@+id/next_to_configure_game_btn"
                    android:layout_width="200dp"
                    android:layout_height="75dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>