<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TableLayout 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:gravity="center">
        <TableRow>
            <TextView
                    android:text="Wlappa game!"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/game_name_tv"/>
        </TableRow>
        <TableRow>
            <TextView
                    android:text="Configure your game"/>
        </TableRow>
        <TableRow>
            <TextView
                    android:text="Time to explain"/>
            <EditText/>
        </TableRow>
        <TableRow>
            <TextView
                    android:text="Game mode"/>
            <RadioGroup>
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="pairs"/>
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="circle"/>
            </RadioGroup>
        </TableRow>
        <Button android:id="@+id/create_server_btn" android:text="Create server"/>
    </TableLayout>
    
</LinearLayout>