<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TableLayout 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:gravity="center">
        <TableRow>
            <TextView android:text="Choose game"/>
        </TableRow>
        <TableRow>
            <RadioGroup android:id="@+id/game_choosing_group">
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                             android:text="The hat" android:id="@+id/game_choice_hat"/>
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                             android:text="Bomzh simulator" android:id="@+id/game_choice_bomzh"/>
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                             android:text="Clicker" android:id="@+id/game_choice_clicker"/>
            </RadioGroup>
        </TableRow>
        <TableRow>
            <Button android:text="Next" android:id="@+id/next_to_configure_game_btn"/>
        </TableRow>
    </TableLayout>
</LinearLayout>