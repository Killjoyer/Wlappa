<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TableLayout 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:gravity="center">
        <TableRow>
            <TextView android:text="Петя объясняет Васе, а ты кстати Петя"/>
        </TableRow>
        <TableRow>
            <TextView android:text="Вот тут пока текущие баллы:"/>
        </TableRow>
        <TableRow>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Семён: 10"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Олег: 9"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Поля: 8"/>
        </TableRow>
        <TableRow>
            <Button android:text="Start explaining" android:id="@+id/start_explaining_btn"/>
        </TableRow>
    </TableLayout>
</LinearLayout>