<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView android:text="expl" android:id="@+id/explainer_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
    <TextView android:text=" EXPLAINS TO "
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
    <TextView android:text="undr" android:id="@+id/understander_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
        <TableRow>
            <TextView android:text="Current points: "/>
        </TableRow>
        <TableRow>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="points"
                      android:id="@+id/scores"/>
        </TableRow>
        <TableRow>
            <Button android:text="Start explaining" android:id="@+id/start_explaining_btn"/>
        </TableRow>
    </TableLayout>
</LinearLayout>